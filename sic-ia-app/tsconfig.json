{
  "include": ["client/src/**/*", "vite.config.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.test.ts",
    "server",
    "shared"
  ],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,

    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    "baseUrl": ".",
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./client/src/*"]
    }
  }
}
